<p id="notice"><%= notice %></p>

<h1>Parties</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Last four ssn</th>
      <th>Added date</th>
      <th>Added by</th>
      <th>Modified date</th>
      <th>Modified by</th>
      <th>Party type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.first_name %></td>
        <td><%= party.last_name %></td>
        <td><%= party.address %></td>
        <td><%= party.city %></td>
        <td><%= party.state.name %></td>
        <td><%= party.zip_code %></td>
        <td><%= party.phone_number %></td>
        <td><%= party.email %></td>
        <td><%= party.last_four_ssn %></td>
        <td><%= party.added_date %></td>
        <td><%= party.added_by %></td>
        <td><%= party.modified_date %></td>
        <td><%= party.modified_by %></td>
        <td><%= party.party_type.type_description %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

