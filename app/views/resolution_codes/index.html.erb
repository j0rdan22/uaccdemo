<p id="notice"><%= notice %></p>

<h1>Resolution Codes</h1>

<table>
  <thead>
    <tr>
      <th>Resolution code  description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolution_codes.each do |resolution_code| %>
      <tr>
        <td><%= resolution_code.resolution_code_description %></td>
        <td><%= link_to 'Show', resolution_code %></td>
        <td><%= link_to 'Edit', edit_resolution_code_path(resolution_code) %></td>
        <td><%= link_to 'Destroy', resolution_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

