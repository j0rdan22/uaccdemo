<p id="notice"><%= notice %></p>

<h1>Matters</h1>

<table>
  <thead>
    <tr>
      <th>Reported date</th>
      <th>End date</th>
      <th>Added date</th>
      <th>Added by</th>
      <th>Modified date</th>
      <th>Modified by</th>
      <th>Comment</th>
      <th>Matter type</th>
      <th>Matter status</th>
      <th>Matter source</th>
      <th>Matter category</th>
      <th>Resolution code</th>
      <th>Urgency level</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.reported_date %></td>
        <td><%= matter.end_date %></td>
        <td><%= matter.added_date %></td>
        <td><%= matter.added_by %></td>
        <td><%= matter.modified_date %></td>
        <td><%= matter.modified_by %></td>
        <td><%= matter.comment %></td>
        <td><%= matter.matter_type.type_description %></td>
        <td><%= matter.matter_status.status_description %></td>
        <td><%= matter.matter_source.source_description %></td>
        <td><%= matter.matter_category.category_description %></td>
        <td><%= matter.resolution_code.resolution_code_description %></td>
        <td><%= matter.urgency_level.level_description %></td>
        <td><%= matter.department.name %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

