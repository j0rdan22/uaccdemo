<p id="notice"><%= notice %></p>

<h1>Matter Updates</h1>

<table>
  <thead>
    <tr>
      <th>Matter</th>
      <th>Update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matter_updates.each do |matter_update| %>
      <tr>
        <td><%= matter_update.matter_id %></td>
        <td><%= matter_update.update %></td>
        <td><%= link_to 'Show', matter_update %></td>
        <td><%= link_to 'Edit', edit_matter_update_path(matter_update) %></td>
        <td><%= link_to 'Destroy', matter_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Matter Update', new_matter_update_path %>
